<div class="container p-4" style="margin-top:70px ;">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR PLATO</h3>
                </div>
                <div class="card-body">
                    <form action="/add-plato" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Nombres"
                                autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="stock" class="input-group-text">Description</label>
                            <input class="form-control" type="text" name="description" id="description"
                                placeholder="Stock" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="stock" class="input-group-text">Stock</label>
                            <input class="form-control" type="number" name="stock" id="stock" placeholder="Stock"
                                required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="age" class="input-group-text">Precio</label>
                            <input class="form-control" type="number" name="price" id="price" placeholder="ej: 12"
                                required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="age" class="input-group-text">Estado</label>
                            <input class="form-control" type="text" name="status" id="status" placeholder="Estado"
                                required>
                        </div>

                        <div class="input-group mt-2">
                            <label class="input-group-text" for="category">Categor√≠a</label>
                            <select class="form-control" id="category" name="dish_category_id">
                                {{#each categorias}}
                                <option value="{{this.dish_category_id}}">
                                    {{this.name}}
                                </option>
                                {{/each}}
                            </select>
                        </div>
                        {{!-- <div class="input-group mt-2">
                            <label for="age" class="input-group-text">Categoria</label>
                            <input class="form-control" type="text" name="dish_category_id" id="dish_category_id"
                                placeholder="Estado" required>
                        </div> --}}

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Guardar</button>
                            <button class="btn btn-danger"><a class="nav-link  link-light" aria-current="page"
                                    href="/list"> Cancelar</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>