<div class="container" style="margin-top:70px ;">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Platos</h3>

        <div style="padding: 10px;">
            <button class="btn btn-danger"><a class="nav-link  link-light" aria-current="page" href="/add-plato"> Nuevo
                    Plato</a></button>
        </div>


        {{#if platos}}
        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col" class="">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Categoria</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each platos}}
                <tr>
                    <td>{{dish_id}}</td>
                    <td>{{name}}</td>
                    <td>{{stock}}</td>
                    <td>{{price}}</td>
                    <td>{{status}}</td>
                    
                    <td>{{category_name}}</td>

                    <td>
                        <div class="">
                            <a href="/edit-plato/{{dish_id}}" class="btn btn-warning p-2 text-white fw-bold">
                                <i class="bi bi-pen-fill "></i>  Actualizar</a>

                            <a href="/delete-plato/{{dish_id}}" class="btn btn-danger p-2 fw-bold">
                                <i class="bi bi-trash3"></i>  Eliminar</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfoot>
                <tr class="table-dark">
                    <td colspan="8">REGISTRO DE PLATOS</td>
                </tr>
            </tfoot>
        </table>
    </div>
    {{else}}
    <div class="card text-center mx-auto" style="width: 350px;">
        <div class="card-header">
            <h3>Debes crear una persona</h3>
        </div>
        <div class="card-body">
            <p>Presiona este boton para que puedas registrar a una persona en la aplicacion</p>
            <a href="/add-plato" class="btn btn-primary">Ir a crear</a>
        </div>
        {{/if}}
    </div>
</div>